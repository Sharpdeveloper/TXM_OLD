<Window x:Class="TXM.GUI.Windows.ProjectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeamerWindow" Height="500" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150px"/>
        </Grid.ColumnDefinitions>
        <WebBrowser Name="wbBrowser" Grid.Column="0"/>
        <Grid Grid.Column="1">
            <Label x:Name="LabelTime" Content="MM:SS" VerticalAlignment="Top" Height="60" FontSize="30" Margin="0,0,0,0" HorizontalAlignment="Center"/>
            <Image x:Name="ImageLogo" VerticalAlignment="Bottom" Source="pack://application:,,,/Resources/TXM_Logo.png" Width="100"/>
        </Grid>
    </Grid>
</Window>
